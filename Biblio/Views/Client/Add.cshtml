@model Biblio.Models.ClientFormViewModel
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>
@using (Html.BeginForm("Save", "Client", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(vm=>vm.Client.Nom)
        @Html.TextBoxFor(vm=>vm.Client.Nom,new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Client.PlanId)
        @Html.DropDownListFor(vm=>vm.Client.PlanId,new SelectList(Model.Plans,"Id","Nom"),new{@class="form-control"})
    </div>
    <button type="submit" class="btn btn-success">Ajouter</button>

}
